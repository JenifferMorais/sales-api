# EditorConfig - Mantém estilos de codificação consistentes entre editores
# https://editorconfig.org

# Configuração raiz
root = true

# Configurações gerais para todos os arquivos
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Java
[*.java]
indent_size = 4
max_line_length = 120

# TypeScript/JavaScript
[*.{ts,js}]
indent_size = 2
max_line_length = 140

# HTML
[*.html]
indent_size = 2

# CSS/SCSS
[*.{css,scss}]
indent_size = 2

# JSON
[*.json]
indent_size = 2

# YAML
[*.{yml,yaml}]
indent_size = 2

# XML
[*.xml]
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false
max_line_length = 0

# Properties files
[*.properties]
indent_size = 2

# Shell scripts
[*.{sh,bat}]
indent_size = 2

# Makefiles
[Makefile]
indent_style = tab

# Package files
[{package.json,package-lock.json}]
indent_size = 2

# POM files
[pom.xml]
indent_size = 4
